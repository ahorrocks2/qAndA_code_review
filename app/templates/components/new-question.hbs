{{yield}}

{{#if addQuestion}}
  <h3>New Question</h3>
  <div>
    <form>
      <div class="form-group">
        {{input value=question id="question" class="form-control" placeholder="Question"}}
      </div>

      <div class="form-group">
        {{input value=author id="author" class="form-control" placeholder="Your Name"}}
      </div>

      <div class="form-group">
        <textarea class="form-control" rows="3" id="textArea" placeholder="Additional Notes">{{input value=notes id="notes" class="form-control"}}</textarea>

      </div>

      <button {{action 'saveQuestion'}} class="btn btn-submit">Add Question</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}} class="btn btn-link">Click here to subit your own!</button>
{{/if}}
